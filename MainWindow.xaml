<Window x:Class="TI4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TI4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
	    <Grid.RowDefinitions>
		    <RowDefinition/>
		    <RowDefinition/>
		    <RowDefinition/>
	    </Grid.RowDefinitions>
	    <Grid.ColumnDefinitions>
		    <ColumnDefinition/>
		    <ColumnDefinition/>
		    <ColumnDefinition/>
	    </Grid.ColumnDefinitions>
	    <TextBox
		    x:Name="Message"
		    Width="300"
		    Height="30"
		    FontSize="18"
		    FontFamily="Verdana"
		    Grid.Row="0"
		    Text="Some text"
		    Grid.ColumnSpan="3">
	    </TextBox>
        <Button
			x:Name="CodeButton"
			Width="80"
			Height="30"
			FontSize="18"
			FontFamily="Verdana"
			Grid.Row="0"
			Grid.Column="2"
			Content="code">
        </Button>
        <ComboBox
			x:Name="Coders"
			Width="200"
			Height="30"
			FontSize="18"
			FontFamily="Verdana"
			Grid.Row="1"
			Grid.Column="2">
        </ComboBox>
	    <TextBox
		    x:Name="CodedMessage"
		    Width="300"
		    Height="30"
		    FontSize="18"
		    FontFamily="Verdana"
		    Grid.Row="1"
		    Text="Some text"
		    Grid.ColumnSpan="3">
	    </TextBox>
    </Grid>
</Window>
